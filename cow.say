#!/bin/bash
# Versão 1
#clear && echo -e "\n\nSalve, vaquinha!" && cowsay Aeeew!

## Versão 2
if dpkg -l | grep -q 'cowsay' #Confere se o pacote "cowsay" já está instalado na máquina.
then
	clear && echo -e "\n\nSalve, vaquinha!" && cowsay Aeeew!
else #Será instalado o pacote "cowsay" caso ele não esteja instalado na máquina.
	sudo apt install cowsay && clear && echo -e "\n\nSalve, vaquinha!" && cowsay Aeeew!
fi


